<Window x:Class="Blackjack.AddMoney"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackjack"
        mc:Ignorable="d"
        Title="AddMoney" Height="114.407" Width="549.259">
    <Grid Height="84" VerticalAlignment="Top" Margin="0,0,0,-1" HorizontalAlignment="Left" Width="543">
        <Grid.Background>
            <ImageBrush ImageSource="./Images/table_background.png"></ImageBrush>
        </Grid.Background>

        <Label x:Name="lblAddMoney" Content="Amount To Add To Bank:" HorizontalAlignment="Left" Margin="56,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.529,-0.61"/>
        <TextBox x:Name="txtAmount" HorizontalAlignment="Left" Height="23" Margin="210,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAdd" Content="Add To Bank" HorizontalAlignment="Left" Margin="347,31,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="439,31,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
    </Grid>



</Window>
